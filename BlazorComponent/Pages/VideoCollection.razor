@using BlazorComponent.Components
@inherits VideoCollectionBase
<h3>My Videos</h3>
<div class="row">
    <div class="container">
        @foreach (var video in Videos)
        {
            <div class="shadow-sm p-3 mb-3 bg-white rounded" @onclick="()=>SelectVideo.InvokeAsync(video)">
                <div class="row">
                    <div class="col-4">
                        <iframe style="width:100%" height="130px" src="@video.Url" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                    </div>
                    <div class="col-8">
                        <h5>@video.Title</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
