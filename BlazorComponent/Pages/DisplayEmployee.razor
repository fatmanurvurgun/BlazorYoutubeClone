@using BlazorComponent.Components
@inherits DisplayEmployeeBase
<h3>DisplayEmployee</h3>


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="https://www.myapimimarlik.com/wp-content/uploads/2019/12/no-profile-img-240x300.gif" />
                <h4>Employee ID : @Employee.Id</h4>
                <h4>Email : @Employee.Name</h4>
                <h4>Department : @Employee.Salary</h4>
            </div>
            <div class="card-footer text-center">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
